@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>MusicStore</h1>
    <p>Encuentra tus Discos Favoritos en un solo lugar</p>

    @foreach(Disco album in ViewBag.Discos) 
    {
        <div>
        <img src="@album.foto" alt="">
        <h1>@album.titulo</h1>
        <p>
            <ul>
                <li>Artista: @album.nombreArtista</li>
                <li>Género: @album.generoMusical</li>
                <li>Productor/es: @album.nombreProductor</li>
                <li>Duración: @album.duracion</li>
            </ul>
            <a href='@Url.Action("MostrarCanciones", new {canciones = album.canciones, titulo = album.titulo})'>
            <input type="button" value="boton" placeholder="Ver Disco Completo">
            </a>
        </p>
        </div>
    }
</div>
